<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title=""
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRApp.View.MainPanel.MasterPage">

    <StackLayout Spacing="20" VerticalOptions="Center">

        <ContentView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="35">
            <Entry Text="{Binding User.Login}" Placeholder="Login" />
        </ContentView>

        <ContentView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="35">
            <Entry Text="{Binding User.Password}" IsPassword="True" Placeholder="Password" />
        </ContentView>

        <ContentView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="12">
            <Button Text="Sign in" 
                    Style="{StaticResource buttonQRapp}" 
                    Command="{Binding _Login}"/>
        </ContentView>
        
    </StackLayout>
    
</ContentPage>