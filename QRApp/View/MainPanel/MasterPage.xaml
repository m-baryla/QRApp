<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="MASTER PAGE"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRApp.View.MainPanel.MasterPage">

    <StackLayout Spacing="20" VerticalOptions="Center">
        <Entry Text="{Binding User.Login}" Placeholder="Login" />
        <Entry Text="{Binding User.Password}" IsPassword="True" Placeholder="Haslo" />
        <Button Text="Zaloguj" Style="{StaticResource buttonQRapp}" Command="{Binding _Login}"/>
        <Button Text="Kontynuuj jako gosc" Style="{StaticResource buttonQRapp}"/>
    </StackLayout>
    
</ContentPage>