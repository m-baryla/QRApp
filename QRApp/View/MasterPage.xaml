<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="MASTER PAGE"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRApp.View.MasterPage">

    <StackLayout Spacing="20" VerticalOptions="Center">
        <Entry Placeholder="Login" />
        <Entry IsPassword="True" Placeholder="Haslo" />
        <Button Text="Zaloguj" Style="{StaticResource buttonQRapp}" Command="{Binding _GoToModules}"/>
        <Button Text="Kontynuuj jako gosc" Style="{StaticResource buttonQRapp}"/>
    </StackLayout>
    
</ContentPage>