<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="MODULES"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRApp.View.ModulesPage">
    
    <StackLayout Spacing="20" VerticalOptions="Center">
        <Button Text="Tworzenie nowego zgloszenia" Style="{StaticResource buttonQRapp}" IsVisible="True"/>
        <Button Text="Panel administratora" Style="{StaticResource buttonQRapp}" IsVisible="True" Command="{Binding _GoToAdminPanel}"/>
        <Button Text="Historia zgloszen" Style="{StaticResource buttonQRapp}" IsVisible="True"/>
        <Button Text="Wiki" Style="{StaticResource buttonQRapp}" IsVisible="True"/>
        <Button Text="Zmiana hasla" Style="{StaticResource buttonQRapp}" IsVisible="True"/>
    </StackLayout>
</ContentPage>