<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRApp.View.UserSettingsPanel.ManagementAccountPage">


    <StackLayout Spacing="20" VerticalOptions="Center">

        <ContentView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="35">
            <Entry Text="{Binding User.Login}" Placeholder="Login" />
        </ContentView>

        <ContentView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="35">
            <Entry Text="{Binding User.Password_1}" IsPassword="True" Placeholder="Password" />
        </ContentView>

        <ContentView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="35">
            <Entry Text="{Binding User.Password_2}" IsPassword="True" Placeholder="Password" />
        </ContentView>

        <ContentView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="12">
            <Button Text="Create new account" 
                    Style="{StaticResource buttonQRapp}" 
                    Command="{Binding _AddNewAccount}"/>
        </ContentView>

    </StackLayout>

</ContentPage>