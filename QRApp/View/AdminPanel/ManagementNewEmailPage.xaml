<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRApp.View.AdminPanel.ManagementNewEmailPage">


    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add New Email" Command="{Binding _AddNewAdressEmail}"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <RefreshView x:Name="RefreshView" Refreshing="RefreshView_OnRefreshing">
        <ScrollView>
            <StackLayout>
                <SearchBar Placeholder="Szukaj..." TextChanged="Handle_TextChanged" Background="White"></SearchBar>
                <ListView x:Name="ListView" 
                          ItemsSource = "{Binding EmailAdressesList}" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding Email}" Detail="{Binding Email}">
                                <TextCell.ContextActions>
                                    <MenuItem Text="Delete" IsDestructive="True"></MenuItem>
                                </TextCell.ContextActions>
                            </TextCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>