<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRApp.View.UserPanel.HistoryTicketsPage">

    <ContentPage.Content>
        <StackLayout>
            <SearchBar Placeholder="Szukaj..." TextChanged="Handle_TextChanged" Background="White"></SearchBar>
            <ListView x:Name="ListView" 
                      ItemsSource = "{Binding HistoryDetailsList}"
                      ItemSelected = "ListView_OnItemSelected"
                      SelectedItem = "{Binding SelectedHistoryDetail, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell Text="{Binding Name}" Detail="{Binding Detail}" ImageSource="">
                            <ImageCell.ContextActions>
                                <MenuItem Text="test_1" IsDestructive="True"></MenuItem>
                                <MenuItem Text="test_2"></MenuItem>
                            </ImageCell.ContextActions>
                        </ImageCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>