<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="QRApp.View.UserPanel.SelectedPage"
            xmlns:userPanel="clr-namespace:QRApp.View.UserPanel;assembly=QRApp">

    <StackLayout Spacing="20" VerticalOptions="Center" >

        <Picker x:Name="pickerLocation" Title="Lokalizacja" SelectedIndexChanged="PickerLocation_OnSelectedIndexChanged"></Picker>

        <Picker x:Name="pickerMaschine" Title="Maszyna" SelectedIndexChanged="PickerMaschine_OnSelectedIndexChanged"></Picker>

        <Button Text="Zatwierdz z listy" Style="{StaticResource buttonQRapp}" IsVisible="True" Command="{Binding _GoToAction}"/>
        <Button Text="Zeskanuj kod QR" Style="{StaticResource buttonQRapp}" IsVisible="True" Command="{Binding _}"/>
    </StackLayout>

</ContentPage>