<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRApp.View.UserPanel.WikiPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add New Wiki" Command="{Binding _GoToNewWikiPage}"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <SearchBar Placeholder="Szukaj..." TextChanged="Handle_TextChanged" Background="White"></SearchBar>
            <ListView x:Name="ListView" 
                      ItemsSource = "{Binding WikiDetailsList}"
                      ItemSelected = "ListView_OnItemSelected"
                      SelectedItem = "{Binding SelectedWikiDetail, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell Text="{Binding Name}" Detail="{Binding Detail}" ImageSource="">
                        </ImageCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>